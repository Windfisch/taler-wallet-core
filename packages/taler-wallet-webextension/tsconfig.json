{
  "compilerOptions": {
    "composite": true,
    "lib": ["es6", "DOM"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES6",
    "noImplicitAny": true,
    "outDir": "lib",
    "noEmitOnError": true,
    "strict": true,
    "incremental": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"]
  },
  "references": [
    {
      "path": "../taler-wallet-core/"
    },
    {
      "path": "../taler-util/"
    }
  ],
  "include": ["src/**/*"]
}
